
.search-input{
	padding: 20rpx;
}
.search-input>input{
	background-color: #F4F4F4;
	border-radius: 10rpx;
}
.topic-search{
	font-size: 27rpx;
}
.topic-swiper{
	/* height: 100%; */
	padding: 0 20rpx 20rpx 20rpx;
}
.topic-swiper image{
	width: 100%;
	border-radius: 10rpx;
}
.topic-new{
	padding: 20rpx;
}
.topic-new>view:first-child{
	padding-bottom: 10rpx;
	font-size: 32rpx;
}
.topic-list{
	padding: 10rpx 0;
	border-bottom: 1rpx solid #EEEEEE;
}
.topic-list image{
	width: 150rpx;
	height: 150rpx;
	border-radius: 10rpx;
	margin-right: 20rpx;
}
.topic-list>view>view{
	color: #A4A4A4;
}
.topic-list>view>view:first-child{
	font-size: 32rpx;
	color: #333333;
}

