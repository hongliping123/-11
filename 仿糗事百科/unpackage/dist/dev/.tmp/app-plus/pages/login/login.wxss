/* 公共按钮样式 */
.user-set-but{
	width: 100%;
	margin: 20rpx 0;
	background-color: #FFE933 !important;
	border: 0 !important;
	color: #333333 !important;
}
.user-set-but-disable{
	background-color: #F4F4F4 !important;
	border: 1rpx solid #EEEEEE !important;
	color: #909090 !important;
}
/* input输入框下边框样式 */
.common-input{
	font-size: 32rpx;
	border-bottom: 1rpx solid #f4f4f4;
}
/* 公共内边距样式 */
.body{
	padding: 0 20rpx;
}
.login-font-color{
	color: #CCCCCC;
}
.login-padding{
	padding: 20rpx 0;
}
.loginhead{
	width: 100%;
}
.icon-guanbi{
	position: fixed;
	top: 60rpx;
	left: 30rpx;
	font-size: 40rpx;
	font-weight: bold;
	color: #332F0A;
}
.other-login-title{
	position: relative;
}
.other-login-title::before,.other-login-title::after{
	content: '';
	position: absolute;
	background-color: #CCCCCC;
	height: 1rpx;
	width: 100rpx;
	top: 50%;
}
.other-login-title::before{
	left: 25%;
}
.other-login-title::after{
	right: 25%;
}

